
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ccsds.moims.mo</groupId>
  <artifactId>ESA_MAL_IMPL</artifactId>
  <packaging>jar</packaging>
  <version>2.2</version>
  <name>ESA MAL Implementation</name>
  <url>http://esoc.esa.int</url>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>central</id>
      <url>http://cvs.scisys.co.uk/artifactory/repo/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>snapshots</id>
      <url>http://cvs.scisys.co.uk/artifactory/repo/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <url>http://cvs.scisys.co.uk/artifactory/plugins-releases</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>snapshots</id>
      <url>http://cvs.scisys.co.uk/artifactory/plugins-snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>
  <distributionManagement>
    <repository>
      <id>cvs.scisys.co.uk</id>
      <name>cvs.scisys.co.uk</name>
      <url>http://cvs.scisys.co.uk/artifactory/libs-releases-local-esa</url>
    </repository>
    <snapshotRepository>
      <id>cvs.scisys.co.uk</id>
      <name>cvs.scisys.co.uk</name>
      <url>http://cvs.scisys.co.uk/artifactory/libs-snapshots-local-esa</url>
    </snapshotRepository>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>org.ccsds.moims.mo</groupId>
      <artifactId>ESA_MAL_API</artifactId>
      <version>2.1</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <groupId>org.ccsds.moims.mo</groupId>
          <artifactId>ESAMOStubGenerator</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.ccsds.moims.mo</groupId>
      <artifactId>ESA_MAL_UTILS</artifactId>
      <version>2.1</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <configuration>
          <effort>Max</effort>
          <threshold>Low</threshold>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>

