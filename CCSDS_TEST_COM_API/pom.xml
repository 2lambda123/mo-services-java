<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>int.esa</groupId>
    <artifactId>CCSDS_MO_POM</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>CCSDS_TEST_COM_API</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ESA TEST COM API</name>
  <description>The CCSDS COM test bed API</description>
  <url>http://www.esa.int</url>
  
  <organization>
    <name>ESA</name>
    <url>http://www.esa.int</url>
  </organization>
  
  <licenses>
    <license>
      <name>The European Space Agency Public License, Version 2.0</name>
      <url>https://raw.github.com/esa/CCSDS_APIS/master/LICENCE.md</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:esa/CCSDS_APIS.git</connection>
    <developerConnection>scm:git:git@github.com:esa/CCSDS_APIS.git</developerConnection>
    <url>https://github.com/esa/CCSDS_APIS</url>
  </scm>
  
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/esa/CCSDS_APIS/issues</url>
  </issueManagement>
  
  <developers>
    <developer>
      <id>SamCooper</id>
      <name>Sam Cooper</name>
      <email>sam.cooper@scisys.co.uk</email>
      <url>https://github.com/SamCooper</url>
    </developer>
  </developers>

  <properties>
    <extra.specification.version>1.0-SNAPSHOT</extra.specification.version>
    <ccsds.specification.download.filter>**/ServiceDefMAL.xml, **/ServiceDefCOM.xml</ccsds.specification.download.filter>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>CCSDS_MAL_API</artifactId>
    </dependency>
    <dependency> 
      <groupId>int.esa</groupId>
      <artifactId>CCSDS_COM_API</artifactId>
      <version>${esa.api.version}</version>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>${basedir}/..</directory>
        <includes>
          <include>LICENCE.md</include>
        </includes>
      </resource>
    </resources>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>download-test-xml</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.ccsds</groupId>
                  <artifactId>MOXML_Extra</artifactId>
                  <version>${extra.specification.version}</version>
                  <type>jar</type>
                  <overWrite>false</overWrite>
                  <outputDirectory>${esa.stubgen.xmlDirectory}</outputDirectory>
                  <includes>**/COMPrototype.xml</includes>
                </artifactItem>
              </artifactItems>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>int.esa</groupId>
        <artifactId>CCSDS_MO_StubGenerator</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
